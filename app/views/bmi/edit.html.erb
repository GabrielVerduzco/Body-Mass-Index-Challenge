
<%= form_for(@bmi, url: bmi_path(@bmi), method: :put ) do |f| %>

<div class="container">
  <div>
    <%= f.text_field :mass, placeholder:"Mass", class: "form-control" %>
  </div>

  <div>
    <%= f.text_field :height, placeholder:"Height", class: "form-control" %>
  </div>
  <div>
    <%= f.submit "Get your category", class: "btn btn-primary btn-lg btn-block"     %>
  </div>

</div>
<%end%>
